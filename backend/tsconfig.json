{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types" // This ensures we read .d.ts from src/types
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "src/types/express.d.ts"
  ],
  "exclude": ["node_modules"],
}